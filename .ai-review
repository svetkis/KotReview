llm:
  provider: OPENAI
  meta:
    model: gpt-4o-mini
    max_tokens: 1500
    temperature: 0.2
  http_client:
    api_url: https://api.openai.com/v1
    api_token: ${OPENAI_API_KEY}   # подтянется из секретов CI/локального окружения

vcs:
  provider: GITHUB            # или GITLAB

review:
  mode: ONLY_ADDED_WITH_CONTEXT
  context_lines: 6
  ignore_changes: ["docs/**", "**/*.md", "**/*.png", "**/*.svg"]

logger:
  level: INFO
